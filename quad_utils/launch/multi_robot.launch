    <group if="$(arg logging)">
        <include file="$(find quad_utils)/launch/logging.launch">
            <arg name="namespace" value="$(arg namespace)" />
        </include>
    </group>

    <node name="plan_publisher" pkg="quad_utils" type="trajectory_publisher_node" output="screen" /> -->

</launch>
